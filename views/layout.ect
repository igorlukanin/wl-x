<body>
    <% content %>

    <script>
        d3.select('html').classed('night', <%= @night %>);

        d3.selectAll('a').on('click', function() {
            var href = d3.select(this).attr('href');
            var target = d3.select(this).attr('target');

            if (target === null) {
                window.location.href = href;
                return false;
            }
        });
    </script>

